<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_marksheet_report">
            <style>
                .font{
                    font-size:11px;
                    font-family:"Helvetica"
                }
                
                @page{
                    margin-top:1%;
                    size: A4;
                }
            </style>
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="font">
                        <div class="page">
                            <t t-foreach="get_objects(docs)" t-as="objs">
                                <t t-foreach="objs" t-as="obj">
                                    <t t-foreach="get_lines(obj)"
                                        t-as="lines">
                                        <t t-foreach="lines" t-as="line">
                                            <div class="row text-center">
                                                <h2>
                                                    <strong>
                                                        <span t-raw="'%s' % line.marksheet_reg_id.exam_session_id.name if 
                                                            line.marksheet_reg_id.exam_session_id.name else ''" /> - <span
                                                                    t-raw="'%s' %  line.marksheet_reg_id.exam_session_id.x_studio_term.x_name if  
                                                                        line.marksheet_reg_id.exam_session_id.x_studio_term.x_name else ''" />, <span
                                                                    t-raw="'%s' %  line.marksheet_reg_id.exam_session_id.x_studio_academic_year.x_name if  
                                                                        line.marksheet_reg_id.exam_session_id.x_studio_academic_year.x_name else ''" />
                                                    </strong>
                                                </h2>
                                            </div>
                                            <br></br>
                                            <br></br>
                                            <t
                                                t-if="obj.exam_session_id.evaluation_type == 'normal'">
                                                <table width="100%">
                                                    <tbody>
                                                        <tr>
                                                            <td
                                                                width="17%">
                                                                <b>NAME</b>
                                                            </td>
                                                            <td>
                                                                :
                                                                <span
                                                                    t-raw="'%s' % line.student_id.name if line.student_id.name else ''" />
                                                            </td>
                                                            <td
                                                                width="15%">
                                                                <b>COURSE
                                                                </b>
                                                            </td>
                                                            <td>
                                                                :
                                                                <span
                                                                    t-raw="'%s' %  line.marksheet_reg_id.exam_session_id.course_id.name if  
                                                                        line.marksheet_reg_id.exam_session_id.course_id.name else ''" />
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td
                                                                width="17%">
                                                                <b>ADM. NO.</b>
                                                            </td>
                                                            <td>
                                                                :
                                                                <span
                                                                    t-raw="'%s' %   line.student_id.student_admission_number if   
                                                                        line.student_id.student_admission_number else ''" />
                                                            </td>
                                                            <td
                                                                width="15%">
                                                                <b>HOUSE</b>
                                                            </td>
                                                            <td>
                                                                :
                                                                <span
                                                                    t-raw="'%s' %   line.student_id.x_studio_house if   
                                                                        line.student_id.x_studio_house else ''" />
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                                <br></br>
                                                <br></br>
                                                <table
                                                    class="table table-bordered">
                                                    <thead>
                                                        <th
                                                            class="text-left">Subject
                                                        </th>
                                                        <th
                                                            class="text-center">Score
                                                        </th>
                                                        <th
                                                            class="text-center">Total
                                                            Marks
                                                        </th>
                                                        <th
                                                            class="text-center">Passing
                                                            Marks
                                                        </th>
                                                        <th
                                                            class="text-center">Obtained
                                                            Marks
                                                        </th>
                                                    </thead>
                                                    <tbody>
                                                        <t
                                                            t-foreach="set(line.result_line)"
                                                            t-as="result">
                                                            <tr>
                                                                <td
                                                                    class="text-left">
                                                                    <span
                                                                        t-raw="'%s' % result.exam_id.subject_id.name if result.exam_id.subject_id.name else ''" />
                                                                </td>
                                                                <td
                                                                    class="text-left">
                                                                    <span
                                                                        t-raw="'%s' % result.marks if result.marks else ''" />
                                                                </td>
                                                                <td
                                                                    class="text-right">
                                                                    <span
                                                                        t-raw="'%s' % result.exam_id.total_marks if result.exam_id.total_marks else ''" />
                                                                </td>
                                                                <td
                                                                    class="text-right">
                                                                    <span
                                                                        t-raw="'%s' %  result.exam_id.min_marks if  result.exam_id.min_marks else ''" />
                                                                </td>
                                                                <td
                                                                    class="text-right">
                                                                    <span
                                                                        t-raw="'%s' % result.marks if result.marks else '--'" />
                                                                </td>
                                                            </tr>
                                                        </t>
                                                    </tbody>
                                                </table>
                                                <br></br>
                                                <table width="100%"
                                                    class="table table-bordered">
                                                    <thead>
                                                        <th
                                                            class="text-center">Month/Year
                                                            of Passing
                                                        </th>
                                                        <th
                                                            class="text-center">Obtained
                                                            Marks/Total
                                                            Marks
                                                        </th>
                                                        <th
                                                            class="text-center">Percentage
                                                        </th>
                                                        <th
                                                            class="text-center">Result
                                                        </th>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <td
                                                                class="text-center">
                                                                <span
                                                                    t-raw="'%s' %  get_date(line.marksheet_reg_id.generated_date) if  get_date(line.marksheet_reg_id.generated_date) else ''" />
                                                            </td>
                                                            <td
                                                                class="text-center">
                                                                <span
                                                                    t-raw="'%s' %  line.total_marks if  line.total_marks else ''" />
                                                                /
                                                                <span
                                                                    t-raw="'%s' %  get_total(line) if  get_total(line) else ''" />
                                                            </td>
                                                            <td
                                                                class="text-center">
                                                                <span
                                                                    t-raw="'%s' %  line.percentage  if  line.percentage  else ''" />
                                                                %
                                                            </td>
                                                            <td
                                                                class="text-center">
                                                                <span
                                                                    t-raw="'%s' % line.status if line.status else ''" />
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </t>
                                            <t
                                                t-if="obj.exam_session_id.evaluation_type == 'grade'">
                                                <table width="100%">
                                                    <tbody>
                                                        <tr>
                                                            <td
                                                                width="17%">
                                                                <b>NAME</b>
                                                            </td>
                                                            <td>
                                                                :
                                                                <span
                                                                    t-raw="'%s' % line.student_id.name if line.student_id.name else ''" />
                                                            </td>
                                                            <td
                                                                width="15%">
                                                                <b>COURSE
                                                                </b>
                                                            </td>
                                                            <td>
                                                                :
                                                                <span
                                                                    t-raw="'%s' %  line.marksheet_reg_id.exam_session_id.course_id.name if  
                                                                        line.marksheet_reg_id.exam_session_id.course_id.name else ''" />
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td
                                                                width="17%">
                                                                <b>ADM. NO.</b>
                                                            </td>
                                                            <td>
                                                                :
                                                                <span
                                                                    t-raw="'%s' %   line.student_id.student_admission_number if   
                                                                        line.student_id.student_admission_number else ''" />
                                                            </td>
                                                            <td
                                                                width="15%">
                                                                <b>HOUSE</b>
                                                            </td>
                                                            <td>
                                                                :
                                                                <span
                                                                    t-raw="'%s' %   line.student_id.x_studio_house if   
                                                                        line.student_id.x_studio_house else ''" />
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                                <br></br>
                                                <br></br>
                                                <table
                                                    class="table table-bordered">
                                                    <thead>
                                                        <th
                                                            class="text-left">Subjects
                                                        </th>
                                                        <th
                                                            class="text-center">Score (%)
                                                        </th>
                                                        <th
                                                            class="text-center">Grade
                                                        </th>
                                                        <th
                                                            class="text-center">Points
                                                        </th>
                                                        <th
                                                            class="text-center">Position
                                                        </th>
                                                        <th
                                                            class="text-left">Remarks
                                                        </th>
                                                        <th
                                                            class="text-center">Sign
                                                        </th>
                                                    </thead>
                                                    <tbody>
                                                        <t t-foreach="line.result_line" t-as="result">
                                                            <tr>
                                                                <td class="text-left">
                                                                    <span t-raw="'%s' % result.exam_id.subject_id.name 
                                                                            if result.exam_id.subject_id.name else ''" />
                                                                </td>
                                                                <td class="text-center">
                                                                    <span t-raw="'%s' % result.marks if result.marks else ''" />
                                                                </td>
                                                                <td class="text-center">
                                                                    <span t-raw="'%s' % result.grade if result.grade else '--'" />
                                                                </td>
                                                                <td class="text-center">
                                                                    <span t-raw="'%s' % result.points if result.points else '--'" />
                                                                </td>
                                                                <td class="text-center">

                                                                </td>
                                                                <td class="text-left">
                                                                    <span t-raw="'%s' % result.remarks if result.remarks else '--'" />
                                                                </td>
                                                                <td class="text-center">
                                                                    <span t-raw="'%s' % 'P' if result.marks &gt; 0 else 'A'" />
                                                                </td>
                                                            </tr>
                                                        </t>
                                                    </tbody>
                                                </table>
                                                <br></br>
                                                <table width="100%"
                                                    class="table table-bordered">
                                                    <thead>
                                                        <th
                                                            class="text-center">Total Marks
                                                        </th>
                                                        <th
                                                            class="text-center">Obtained Grade</th>
                                                        <th
                                                            class="text-center">Percentage
                                                        </th>
                                                        <th
                                                            class="text-center">Result
                                                        </th>
                                                        <th
                                                            class="text-center">Position
                                                        </th>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <!-- <td
                                                                class="text-center">
                                                                <span
                                                                    t-raw="'%s' %  get_date(line.marksheet_reg_id.generated_date) if  get_date(line.marksheet_reg_id.generated_date) else ''" />
                                                            </td> -->
                                                            <td class="text-center">
                                                                <span t-raw="'%s' %  line.total_marks if  line.total_marks else ''" /> / 
                                                                <span t-raw="'%s' %  line.total_exam_marks if  line.total_exam_marks else ''" />
                                                            </td>
                                                            <td class="text-center">
                                                                <span t-raw="'%s' %  line.grade if  line.grade else ''" />
                                                            </td>
                                                            <td class="text-center">
                                                                <span t-raw="'%s' %  line.percentage  if  line.percentage  else ''" /> %
                                                            </td>
                                                            <td
                                                                class="text-center">
                                                                <span
                                                                    t-raw="'%s' % line.status if line.status else ''" />
                                                            </td>
                                                            <td
                                                                class="text-center">
                                                                <span t-raw="'%s' % line.position if line.position else ''" /> / 
                                                                <span t-raw="'%s' % line.total_students if line.total_students else ''" />
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </t>
                                            <p style="page-break-after: always;"></p>
                                        </t>
                                    </t>
                                </t>
                            </t>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
