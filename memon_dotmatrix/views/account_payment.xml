<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_account_payment_dotmatrix_form" model="ir.ui.view">
            <field name="name">account.payment.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">

                <header>
                    <button string="Dot Matrix" icon="fa-print" type="object" name="dummy" custom="print"/>
                </header>


                <xpath expr="//field[@name='payment_date']" position="after">
                    <notebook>
                        <page string="Dot Matrix">

                            <button string="Refresh Printer Data" icon="fa-print"
                                    states="posted" type="object" name="action_refresh_printer_data"/>

                            <pre>
                                <field name="printer_data"/>
                            </pre>

                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>

    </data>
</odoo>