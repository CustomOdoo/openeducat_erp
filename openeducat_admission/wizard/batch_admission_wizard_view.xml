<?xml version="1.0"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="op_batch_admission_form">
            <field name="name">batch_admission.form</field>
            <field name="model">op.batch.admission</field>
            <field name="arch" type="xml">
                <form string="Mass Admission">
                    <group>
                        <field name="register_id"/>
                        <field name="course_id" />
                        <field name="batch_id" />
                        <field name="fees" />
                    </group>
                    <group>
                        <field name="students" nolabel="1"/>
                    </group>
                    <footer groups="base.group_user">
                        <button name="mass_enroll" type="object"
                            string="Enroll" class="oe_highlight" />
                        <button string="Cancel" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="op_batch_admission_act">
            <field name="name">Mass Admission</field>
            <field name="res_model">op.batch.admission</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="op_batch_admission_form" />
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
